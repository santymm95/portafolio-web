// Obtener todas los botones "open-video-modal" y el modal
var videoButtons = document.querySelectorAll(".open-video-modal");
var modal = document.getElementById("videoModal");
var closeModal = document.getElementById("closeModal");
var video = document.getElementById("video");

// Agregar un evento de clic a cada botón "open-video-modal"
videoButtons.forEach(function(button) {
    button.addEventListener("click", function() {
        var videoSrc = this.getAttribute("data-video-src");
        video.src = videoSrc; // Establecer la fuente del video en el modal
        modal.style.display = "block"; // Mostrar el modal
    });
});

// Cerrar el modal al hacer clic en el botón de cierre (X)
closeModal.addEventListener("click", function() {
    video.pause(); // Pausar el video al cerrar el modal
    video.src = ""; // Vaciar la fuente del video
    modal.style.display = "none";
});

// Cerrar el modal al hacer clic en el fondo oscuro
modal.addEventListener("click", function(event) {
    if (event.target === modal) {
        video.pause(); // Pausar el video al cerrar el modal
        video.src = ""; // Vaciar la fuente del video
        modal.style.display = "none";
    }
});





